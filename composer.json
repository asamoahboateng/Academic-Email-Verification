{
    "name": "asamoahboateng/academic-email-verifier",
    "description": "A PHP package to verify if an email address belongs to an academic or research institution. Live demo: https://verify-academic-email.asamoahboateng.com",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kwame Boateng",
            "email": "kwame@asamoahboateng.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AcademicEmailVerifier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AcademicEmailVerifier\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 